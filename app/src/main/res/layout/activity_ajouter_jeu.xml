<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".AjouterJeuActivity">

    <include layout="@layout/tool_bar"></include>

    <TextView
        android:text="@string/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="92dp"
        android:id="@+id/textView" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="11dp"
        android:id="@+id/theme"
        android:hint="Entrez le nom du theme"
        android:layout_below="@+id/textView"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ajouter"
        android:layout_below="@+id/theme"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:onClick="ajouter"/>

    <Button
        android:text="Afficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/afficher"
        android:onClick="afficher"
        android:layout_below="@+id/ajouter"
        android:layout_alignLeft="@+id/ajouter"
        android:layout_alignStart="@+id/ajouter" />

</RelativeLayout>
